{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Node.js server",
            "program": "${workspaceFolder}/scripts/debug.js",
            "cwd": "${workspaceFolder}"
        }
    ]
}
